    <textarea class="form-control" name="message" rows="10" placeholder="Enter your message...">{{ message }}</textarea>
  </div>
  <div class="text-center">
    <button type="submit" name="button" class="btn btn-primary btn-block">Submit</button>
  </div>
</form>
